<!-- <h2>Criar conta</h2> -->

<main class="form-signin text-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <i class="bi bi-kanban mb-4" style="font-size: 3rem"></i>

    <h2 class="h3 mb-3 fw-normal">Criar conta como usuário</h2>

    <div class="form-floating">
      <%= f.text_field :name, autofocus: true, class: "form-control", 
        placeholder: "Jane Doe" %>
      <%= f.label :name %>
      <% resource.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback">
          <%= message %>
        </div>
      <% end %>
    </div>

    <div class="form-floating">
      <%= f.email_field :email, autocomplete: "email", class: "form-control", 
        placeholder: "jane.doe@email.com" %>
      <%= f.label :email %>
      <% resource.errors.full_messages_for(:email).each do |message| %>
        <div class="invalid-feedback">
          <%= message %>
        </div>
      <% end %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password, autocomplete: "new-password", 
        class: "form-control", placeholder: "Mínimo 6 caracteres" %>
      <%= f.label :password %>
      <% resource.errors.full_messages_for(:password).each do |message| %>
        <div class="invalid-feedback">
          <%= message %>
        </div>
      <% end %>
      <% #if @minimum_password_length %>
      <!-- <em>(mínimo: <%= @minimum_password_length %> caracteres)</em> -->
      <% #end %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", 
        class: "form-control", placeholder: "Mínimo 6 caracteres" %>
      <%= f.label :password_confirmation %>
      <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
        <div class="invalid-feedback">
          <%= message %>
        </div>
      <% end %>
    </div>

    <br>

    <div class="actions">
      <%= f.submit "Criar conta", class: "w-100 btn btn-lg btn-primary" %>
    </div>
  <% end %>
  
  <br>

  <div class="d-flex justify-content-evenly">
    <%= render "users/shared/links" %> 
    <%= link_to 'Voltar', root_path %>
  </div>
</main>

